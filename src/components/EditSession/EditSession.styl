.edit-session {
  padding: 16px;
  background-color: rgba(255,255,255,0.4);
  border-radius: 16px;
  text-align: center;
  font-size: 32px;

  .edit-session-content {
    background-color: rgba(0,0,0,0.2);
    padding: 8px 24px;
    margin-top: 16px;
    border-radius: 20px;
    display: flex;
    flex-direction: column;

    .edit-session-failure-rate, .edit-session-display-name {
      padding-bottom: 16px;
      display: flex;

      font-size: 24px;
      div {
        width: 30%;
      }
      input {
        margin-left: 5%;
        border-radius: 8px;
        padding-left: 3px;
        font-size: 20px;
      }
    }

    .item-actions {
      width: 100%;
      i {
        font-size: 32px;
        color: #000;
      }  
    }
  }
}